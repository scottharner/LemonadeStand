@model HomeViewModel


<partial name="_Carousel" />

<div class="text-center">
    <img src="Images/bethanys-pie-shop-logomark.png" class="logo-mark mx-auto" />
    <h1>Featured beverages</h1>
    <h5>Enjoy a weekly selection of our favorite beverages</h5>

    <div class="row pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var beverage in Model.FeaturedBeverages)
            {
                <partial name="_BeverageCard" model="beverage"/>
            }
        </div>

    </div>
</div>
